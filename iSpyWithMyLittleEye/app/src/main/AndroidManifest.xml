<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.haydenpunchescamels.ispywithmylittleeye">

    <application
        android:name=".MainGlobal"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".homepage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".devicelist"
            android:label="Manage Devices">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".homepage" />
        </activity>
        <activity
            android:name=".settingspage"
            android:label="Settings">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".homepage" />
        </activity>
        <activity
            android:name=".editdevice"
            android:label="Edit Devices">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".devicelist" />
        </activity>
        <activity
            android:name=".deviceadd"
            android:label="Add Device">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".devicelist" />
        </activity>
        <activity
            android:name=".viewscreen"
            android:label="Live Camera Feed">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".devicelist" />
        </activity>
    </application>

</manifest>