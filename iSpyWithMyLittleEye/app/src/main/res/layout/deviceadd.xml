<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.haydenpunchescamels.ispywithmylittleeye.deviceadd">


    <EditText
        android:id="@+id/chooseDevice"
        android:layout_width="match_parent"
        android:entries="@array/device_array"
        android:prompt="@string/chooseDevice"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deviceName"
        android:layout_alignParentStart="true"
        android:hint="Device Type"
        android:layout_marginTop="42dp" />

    <Button
        android:text="Add Device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addDevice"
        android:layout_below="@+id/chooseDevice"
        android:layout_marginTop="55dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Device Name"
        android:ems="10"
        android:id="@+id/deviceName"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
